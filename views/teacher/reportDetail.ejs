<%- include('../includes/teacherHead.ejs') %>

  <!-- ----------------------------------------- -->

  <div class="container-fluid">
    <div class="row">

      <%- include('../includes/teacherNav.ejs') %>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 ">

        <div class="d-flex align-items-center p-3 my-3 text-white bg-primary rounded shadow-sm">
          <!-- <img class="me-3" src="/docs/5.0/assets/brand/bootstrap-logo-white.svg" alt="" width="48" height="38"> -->
          <div class="lh-1">
            <h1 class="h5 mb-0 text-white lh-1">Grades</h1>

          </div>
        </div>
        <table class="container table table-striped">
          
          <% if(grades <= 0) {%>
            <h5 class="text-dark my-5"  style="text-align: center;">No Exam Attended!!!</h5>
          <% } else {%>
            <thead class="bg-primary text-light">
              <tr>
                <th scope="col">Student Name</th>
                <th scope="col">Exam Name</th>
                <th scope="col">Achieved Marks</th>
                <th scope="col">Total Marks</th>
              </tr>
            </thead>
            <tbody>
              <% for(let grade of grades )  { %>
              <tr>
                <td><%= grade.studentName %></td>
                <td><%= grade.examName %></td>
                <td><%= grade.achievedMarks %></td>
                <td><%= grade.totalMarks %></td>
              </tr>
              <% }  %>
            </tbody>
          <% } %>
          </table>
        
        </main>
        
    </div>
  </div>

    

    <%- include('../includes/teacherEnd.ejs') %>